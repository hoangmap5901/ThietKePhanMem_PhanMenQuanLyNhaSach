<Window x:Class="MyShop.CapNhatTheLoaiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop"
        mc:Ignorable="d"
        Title="Cap Nhat The Loai Window" Height="300" Width="550" Loaded="Window_Loaded">
    <Canvas>
        <TextBlock Text="Nhập Thông Tin Cập Nhật Thể Loại Sách" FontWeight="Bold" 
                   FontSize="25" Canvas.Left="43" Canvas.Top="19"/>

        <TextBlock Text="Tên" Canvas.Left="58" Canvas.Top="132"/>
        <TextBox x:Name="tenTextBox" Text="{Binding Path=Ten}" Padding="5,0,0,0" Canvas.Left="188" Canvas.Top="132" Width="312"/>
        <Button x:Name="CapNhatButton" IsDefault="True" Content="Cập nhật" Click="CapNhatButton_Click" Canvas.Left="150" 
                Canvas.Top="222" Height="27" Width="60"/>
        <Button x:Name="dongButton" IsCancel="True" Content="Đóng" Canvas.Left="314" Canvas.Top="222" Height="27" Width="60"/>
    </Canvas>
</Window>
