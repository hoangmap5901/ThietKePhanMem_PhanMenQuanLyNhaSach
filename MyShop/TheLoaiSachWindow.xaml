<Window x:Class="MyShop.TheLoaiSachWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop"
        mc:Ignorable="d"
        Title="Thể Loại Sách Window" Height="550" Width="600" Loaded="Window_Loaded">
    <Canvas>
        <StackPanel Orientation="Horizontal" Height="50" DockPanel.Dock="Top" Canvas.Left="10">
            <Button Margin="5" x:Name="themTheLoaiButton" Content="Thêm" Width="80" Height="35" 
                Click="ThemTheLoaiButton_Click" />
            <Button Margin="5" x:Name="xoaTheLoaiButton" Content="Xóa" Width="80" Height="35" 
                Click="XoaTheLoaiButton_Click" Canvas.Left="144" Canvas.Top="18"/>
            <Button Margin="5" x:Name="capNhatTheLoaiButton" Width="80" Height="35" Content="Cập nhật"
                Click="CapNhatTheLoaiButton_Click" Canvas.Left="245" Canvas.Top="18"/>
        </StackPanel>

        <DataGrid Name="theLoaiDataGrid" Height="404" Width="578" Canvas.Top="60" HorizontalScrollBarVisibility="Visible"
                  VerticalScrollBarVisibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Canvas>
</Window>
