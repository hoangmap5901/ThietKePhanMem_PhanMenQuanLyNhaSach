<Window x:Class="MyShop.ThemTheLoaiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Thêm Thể Loại Window" Height="350" Width="600" Loaded="Window_Loaded">
    <Canvas>
        <TextBlock Text="Nhập Thông Tin Thêm Thể Loại Sách" FontWeight="Bold" 
                   FontSize="25" Canvas.Left="66" Canvas.Top="33"/>
        <TextBlock Text="Tên" Canvas.Left="38" Canvas.Top="151"/>
        <TextBox x:Name="tenTextBox" Text="{Binding Path=Ten}" Padding="5,0,0,0" Canvas.Left="144" Canvas.Top="149" Width="312"/>
        <Button x:Name="themButton" IsDefault="True" Content="Thêm" Click="ThemButton_Click" Canvas.Left="165" Canvas.Top="229" Height="27" Width="50"/>
        <Button x:Name="dongButton" IsCancel="True" Content="Đóng" Canvas.Left="338" Canvas.Top="230" Height="26" Width="50"/>
    </Canvas>
</Window>
